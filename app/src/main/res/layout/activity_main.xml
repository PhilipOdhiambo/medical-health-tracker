<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/appTitle"
        style="@style/titleStyle"
        android:text="What Do you want to track?"
        android:textColor="@color/teal_200" />

    <TextView
        android:id="@+id/appBmi"
        style="@style/CategoryStyle"
        android:backgroundTint="@color/category_bmi"
        android:text="Body Mass Index (BMI)" />

    <TextView
        android:id="@+id/adverseEventTextView"
        style="@style/CategoryStyle"
        android:backgroundTint="@color/cardview_dark_background"

        android:text="Drug Adverse Reactions" />

    <TextView
        android:id="@+id/appEDD"
        style="@style/CategoryStyle"
        android:backgroundTint="@color/category_edd"
        android:text="My Medicine (Uses and Warning)" />

    <TextView
        android:id="@+id/text_view_drug_detail"
        style="@style/CategoryStyle"
        android:backgroundTint="@color/category_bmi"
        android:text="Drug Detail" />
</LinearLayout>